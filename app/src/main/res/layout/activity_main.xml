<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/darker_gray">

    <!-- Main content layout -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Google Map Fragment -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Custom Center-Map Button -->
        <ImageButton
            android:id="@+id/custom_center_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="50dp"
            android:padding="0dp"
            android:background="@color/semi_transparent"
            android:src="@drawable/ic_follow"
            android:contentDescription="center_map" />

        <ImageButton
            android:id="@+id/layers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="80dp"
            android:padding="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_layers"
            android:contentDescription="layers" />

        <ImageButton
            android:id="@+id/flightPlan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="110dp"
            android:padding="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_plane"
            android:contentDescription="flight plan" />



        <!-- Version number -->
<!--        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/app_version"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <!-- Progress Overlay -->
        <FrameLayout
            android:id="@+id/progress_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/progress_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_marginBottom="44dp"
                android:padding="0dp"
                android:background="@android:color/holo_blue_dark"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progress_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/progress_message_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </FrameLayout>

        <!-- Buttons Container -->
        <LinearLayout
            android:id="@+id/button_container"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:paddingBottom="0dp"
            android:orientation="horizontal">

            <!-- Button 1 -->
            <Button
                android:id="@+id/toggle_airspace_button"
                style="@style/CustomButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/toggle_airspace"
                android:textColor="@android:color/white"
                android:textSize="10sp"

                tools:ignore="TouchTargetSizeCheck" />

            <!-- Button 2 -->
            <Button
                android:id="@+id/toggle_tfr_button"
                style="@style/CustomButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/toggle_tfr"
                android:textColor="@android:color/white"
                android:textSize="10sp"

                tools:ignore="TouchTargetSizeCheck" />

            <!-- Button 3 -->
            <Button
                android:id="@+id/toggle_metar_button"
                style="@style/CustomButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/toggle_weather"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Button 4 -->
            <Button
                android:id="@+id/toggle_vfrsec_button"
                style="@style/CustomButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/toggle_vfrsec"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/layer_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@android:color/holo_red_light"
                android:textSize="10sp"
                android:background="@drawable/rounded_button"
                android:entries="@array/layer_options"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </FrameLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>

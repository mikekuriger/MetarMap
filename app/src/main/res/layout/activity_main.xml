<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/darker_gray">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Flight info layout -->
        <LinearLayout
            android:id="@+id/flight_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- ðŸ”¹ First Parent (Top Section: 4 Columns, 4 Rows) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#000000">

                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- âœ… First Label Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#33ffffff">
                        <TextView
                            android:text="Current Leg"
                            android:textSize="8sp"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:text="DTN"
                            android:textSize="8sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:text="Bearing"
                            android:textSize="8sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView android:text="ETA"
                            android:textSize="8sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- âœ… First Data Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/current_leg"
                            android:text="---- â†’ ----"
                            android:textSize="16sp"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/distance_text"
                            android:text="---nm"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/bearing_text"
                            android:text="---Â°"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/eta_text"
                            android:text="--:--"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- âœ… Second Label Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#33ffffff">
                        <TextView
                            android:text="Alt"
                            android:textSize="8sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:text="VS"
                            android:textSize="8sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:text="GS"
                            android:textSize="8sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:text="Track"
                            android:textSize="8sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:text="Final Destination"
                            android:textSize="8sp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="#33ffffff"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- âœ… Second Data Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/altitude_text"
                            android:text="---ft"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/vs_text"
                            android:text="---"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/gps_speed"
                            android:text="---kt"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/track_text"
                            android:text="---Â°"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/darker_gray"/>
                        <TextView
                            android:id="@+id/dest_text"
                            android:text="----"
                            android:textSize="16sp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@android:color/white"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- ðŸ”¹ Second Parent (Below right section, 4 new rows) -->
            <LinearLayout
                android:id="@+id/flight_info_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <!-- Empty Space for Alignment -->
                <View android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <!-- Below 4th Column -->
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#000000">

                    <!-- âœ… First Label (ETA Dest) -->
                    <TextView
                        android:text="ETA Dest"
                        android:textSize="8sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#33ffffff"
                        android:textColor="@android:color/white"/>

                    <!-- âœ… First Data (ETA Dest Value) -->
                    <TextView
                        android:id="@+id/eta_dest_text"
                        android:text="--:--"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/white"/>

                    <!-- âœ… Second Label (Distance Dest) -->
                    <TextView
                        android:text="DTD"
                        android:textSize="8sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#33ffffff"
                        android:textColor="@android:color/white"/>

                    <!-- âœ… Second Data (VS Value) -->
                    <TextView
                        android:id="@+id/dtd_text"
                        android:text="---nm"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/white"/>

                    <!-- âœ… Extra 4 Label/Data Rows -->
<!--                    <TextView-->
<!--                        android:text="Final Destination"-->
<!--                        android:textSize="8sp"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:gravity="center"-->
<!--                        android:background="#33ffffff"-->
<!--                        android:textColor="@android:color/white"/>-->
<!--                    <TextView-->
<!--                        android:id="@+id/dest_text"-->
<!--                        android:text="&#45;&#45;&#45;&#45;"-->
<!--                        android:textSize="16sp"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:gravity="center"-->
<!--                        android:textColor="@android:color/white"/>-->

                    <TextView
                        android:text="New Label 2"
                        android:visibility="gone"
                        android:textSize="8sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:background="#33ffffff"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:id="@+id/new_data_2"
                        android:visibility="gone"
                        android:text="Value 2"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Side Buttons -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/gpsStatusIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="320dp"
            android:background="@drawable/rounded_bg"
            android:contentDescription="TODO"
            android:visibility="gone"
            android:src="@android:drawable/ic_menu_mylocation"
            app:tint="@android:color/holo_red_dark" />

        <ImageButton
            android:id="@+id/record_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="275dp"
            android:background="@drawable/rounded_bg"
            android:src="@drawable/ic_recording"
            android:contentDescription="Record Track" />

        <ImageButton
            android:id="@+id/stratux_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="230dp"
            android:background="@drawable/rounded_bg"
            android:src="@drawable/ic_stratux"
            android:contentDescription="Stratux" />

        <ImageButton
            android:id="@+id/flight_plan_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="185dp"
            android:background="@drawable/rounded_bg"
            android:src="@drawable/ic_plane"
            android:contentDescription="Flight Instruments" />

        <ImageButton
            android:id="@+id/nav_log_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="140dp"
            android:background="@drawable/rounded_bg"
            android:src="@drawable/ic_compass2"
            android:contentDescription="Nav Log" />

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="95dp"
            android:background="@drawable/rounded_bg"
            android:src="@drawable/ic_settings"
            android:contentDescription="Settings" />

        <ImageButton
            android:id="@+id/custom_center_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rounded_bg"
            android:src="@drawable/ic_my_location"
            android:contentDescription="Center_Map"
            app:tint="@color/red" />

        <!-- data row for testing -->
        <TextView
            android:id="@+id/zoomText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="55dp"
            android:layout_gravity="right|bottom"
            android:text="Zoom: "
            android:textSize="7sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/versionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="45dp"
            android:layout_gravity="right|bottom"
            android:text="@string/app_version"
            android:textSize="7sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Progress Overlay -->

        <!-- Bottom Buttons Container -->
        <FrameLayout
            android:id="@+id/progress_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
            <!--            android:background="#00000000"-->


            <LinearLayout
                android:id="@+id/progress_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="44dp"
                android:background="@android:color/holo_blue_dark"
                android:orientation="horizontal"
                android:padding="0dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/progress_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:indeterminate="true" />

                <TextView
                    android:id="@+id/progress_message_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:id="@+id/button_container"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:paddingBottom="0dp"
            android:orientation="horizontal">

            <!-- Button 1 -->
            <Button
                android:id="@+id/toggle_airspace_button"
                style="@style/CustomButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/toggle_airspace"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"

                tools:ignore="TouchTargetSizeCheck" />

            <!-- Button 2 -->
            <Button
                android:id="@+id/toggle_tfr_button"
                style="@style/CustomButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/toggle_tfr"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"

                tools:ignore="TouchTargetSizeCheck" />

            <!-- Button 3 -->
            <Button
                android:id="@+id/toggle_metar_button"
                style="@style/CustomButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/toggle_weather"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck" />

            <!-- Button 4 -->
            <Button
                android:id="@+id/toggle_vfrsec_button"
                style="@style/CustomButtonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:text="@string/toggle_vfrsec"
                android:textColor="@android:color/darker_gray"
                android:textSize="10sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Spinner
                android:id="@+id/layer_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:textColor="@android:color/holo_red_light"
                android:textSize="10sp"
                android:background="@drawable/rounded_button"
                android:entries="@array/layer_options"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </FrameLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>